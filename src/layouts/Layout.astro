---
import { ViewTransitions } from 'astro:transitions';
import Social from '../components/Social.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Porfolio personal" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Sebastián Pérez Delfino</title>
		<ViewTransitions />
	</head>
	<body>
		<slot />
		<Social></Social>
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		scrollbar-color: gray #13151a;
	}

	body {
		margin: 0;
		min-height: 100vh;
	}

	.title-proyect {
		position: sticky;
		top: 100px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    color: white;
    width: 350px;
    padding: 12px 0px;
  }

  .title-proyect h3 {
    margin: 0;
  }

  .title-proyect span {
    opacity: .6;
  }

	.container-pill {
		display: flex;
		flex-wrap: wrap;
		gap: 8px;
	}

  .container-pill .pill {
    border:1px solid gray;
    display: flex;
    gap: 8px;
    align-items: center;
    border-radius: 8px;
    padding: 8px;
    width: fit-content;
    font-weight: bold;
  }

	.lazyload {
		opacity: 0;
		transform: translateY(20px);
		transition-duration: .3s;
	}

	.lazyload.loaded {
		opacity: 1;
		transform: translateY(0);
	}

	@media only screen and (max-width: 767px) {
		body {
			box-sizing: border-box;
			padding-bottom: 68px;
		}
	}
</style>
