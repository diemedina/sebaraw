<style>
  section {
    padding-top: 24px;
    display: grid;
    grid-template-columns: 350px 1fr;
    gap: 60px;
    justify-content: center;
    align-items: flex-start;
    min-height: 100vh;
    width: 1200px;
    margin: 0 auto;
  }

  .picture-proyect {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
    padding: 12px;
  }
  .picture-proyect iframe {
    border-radius: 12px;
    transition-duration: .3s;
  }
  .picture-proyect iframe:hover {
    transform: scale(1.1);
  }

  article {
    width: 350px;
    aspect-ratio: 1;
    background: #fff;
    background-image: url("https://cdn.myportfolio.com/30acb070-e6ba-4531-8cb8-a1b7e57144e9/f0f22eda-0f59-4444-9bd3-d2d60f4dc65f_rwc_0x7x403x303x403.png?h=5159d919cd5f290c6f90bbe92ec364f5");
    background-size: 100%;
    background-position: center center;
    border-radius: 12px;
  }

  @media only screen and (max-width: 767px) {
    section {
			width: 100%;
      grid-template-columns: 1fr;
      justify-items: center;
      padding: 0;
		}

    .title-proyect {
      position: relative;
      top: 0;
    }

    .title-proyect article {
      width: 100%;
    }

    .picture-proyect {
      grid-template-columns: 1fr;
    }
	}
</style>