<style>
  section {
    padding-top: 24px;
    display: grid;
    grid-template-columns: 350px 1fr;
    gap: 60px;
    justify-content: center;
    align-items: flex-start;
    min-height: 100vh;
    width: 1200px;
    margin: 0 auto;
  }

  .picture-proyect {
    display: grid;
    gap: 24px;
    padding: 12px;
  }

  .picture-proyect iframe {
    border-radius: 12px;
    transition-duration: .3s;
  }

  .picture-proyect iframe:hover {
    transform: scale(1.1);
  }

  article {
    width: 350px;
    aspect-ratio: 1;
    background: #fff;
    border-radius: 12px;
    color: black;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow:hidden;
  }

  article img {
    width: 350px;
    height: 350px;
  }

  @media only screen and (max-width: 767px) {
    section {
        width: 100%;
        grid-template-columns: 1fr;
        justify-items: center;
        padding: 0;
    }

    .title-proyect {
      position: relative;
      top: 0;
    }

    .picture-proyect {
      grid-template-columns: 1fr;
    }

    iframe {
      max-height: 182px;
      max-width: 320px;
    }

    .picture-proyect iframe:hover {
      transform: scale(1);
    }
	}

</style>